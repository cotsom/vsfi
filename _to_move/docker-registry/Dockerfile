FROM registry:2

ENV REGISTRY_AUTH=htpasswd
ENV REGISTRY_AUTH_HTPASSWD_REALM=Registry
ENV REGISTRY_AUTH_HTPASSWD_PATH=./auth/registry.password
ENV REGISTRY_STORAGE_FILESYSTEM_ROOTDIRECTORY=/data

