$TTL 2d

@               IN      SOA     ns1.vsfi.local. root.vsfi.local. (
                                {{ dns_marker_value }}      ; serial
                                12h             ; refresh
                                15m             ; retry
                                3w              ; expire
                                2h              ; minimum ttl
                                )

                IN      NS      ns1.vsfi.local.

ns1             IN      A       {{ ansible_host }}

{% for item in dns_records %}
{{ item.fqdn }}.      IN      {{ item.type }}       {{ item.ip }}
{% endfor %}
